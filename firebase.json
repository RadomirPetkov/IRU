{
  "hosting": {
    "redirects": [
      {
        "source": "/**",
        "destination": "https://iru.bg/:1",
        "type": 301
      }
    ],
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
